{
  "name": "Speasy",
  "author": "Richard Simmons (https://github.com/richardsimms)",
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "predev": "node scripts/ensure-pglite-port.mjs",
    "dev:spotlight": "npx @spotlightjs/spotlight",
    "dev:next": "next dev",
    "dev": "run-p db-server:file dev:*",
    "build:next": "next build --webpack",
    "build-local": "run-p 'db-server:memory' 'build:next:local' --race",
    "build:next:local": "cross-env DATABASE_URL=postgresql://localhost:5433/postgres CLERK_SECRET_KEY=dummy-clerk-secret-key-for-build NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_dummy-clerk-publishable-key-for-build npm run build:next",
    "build": "run-s build:next",
    "build:with-migrate": "run-s db:migrate build:next",
    "start": "next start",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next out coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "check:types": "tsc --noEmit --pretty",
    "check:deps": "knip",
    "commit": "commit",
    "test": "vitest run",
    "test:e2e": "playwright test",
    "db-server:file": "pglite-server --db=local.db --port=5433 --include-database-url --run 'npm run db:migrate'",
    "db-server:memory": "pglite-server --port=5433 --include-database-url --run 'npm run db:migrate'",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:studio": "drizzle-kit studio",
    "storybook": "storybook dev -p 6006",
    "storybook:test": "vitest run --config .storybook/vitest.config.mts",
    "build-storybook": "storybook build"
  },
  "dependencies": {
    "@arcjet/next": "^1.0.0-beta.15",
    "@clerk/localizations": "^3.30.1",
    "@clerk/nextjs": "^6.36.2",
    "@hookform/resolvers": "^5.2.2",
    "@logtape/logtape": "^1.2.2",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.2.4",
    "@sentry/nextjs": "^10.30.0",
    "@supabase/supabase-js": "^2.87.1",
    "@t3-oss/env-nextjs": "^0.13.8",
    "@vercel/analytics": "^1.6.1",
    "@vercel/speed-insights": "^1.3.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "drizzle-orm": "^0.45.1",
    "framer-motion": "^12.23.26",
    "geist": "^1.5.1",
    "lucide-react": "^0.561.0",
    "next": "^16.0.10",
    "next-intl": "^4.6.0",
    "next-themes": "^0.4.6",
    "pg": "^8.16.3",
    "posthog-js": "^1.306.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-hook-form": "^7.68.0",
    "react-markdown": "^10.1.0",
    "showdown": "^2.1.0",
    "supabase": "^2.67.1",
    "svix": "^1.82.0",
    "tailwind-merge": "^3.4.0",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.6.1",
    "@chromatic-com/playwright": "^0.12.8",
    "@clerk/types": "^4.101.6",
    "@commitlint/cli": "^20.2.0",
    "@commitlint/config-conventional": "^20.2.0",
    "@commitlint/prompt-cli": "^20.2.0",
    "@commitlint/types": "^20.2.0",
    "@electric-sql/pglite-socket": "^0.0.19",
    "@eslint-react/eslint-plugin": "^2.3.13",
    "@faker-js/faker": "^10.1.0",
    "@next/bundle-analyzer": "^16.0.10",
    "@next/eslint-plugin-next": "^16.0.10",
    "@playwright/test": "^1.57.0",
    "@spotlightjs/spotlight": "^4.8.0",
    "@storybook/addon-a11y": "^10.1.8",
    "@storybook/addon-docs": "^10.1.8",
    "@storybook/addon-vitest": "^10.1.8",
    "@storybook/nextjs-vite": "^10.1.8",
    "@tailwindcss/postcss": "^4.1.18",
    "@types/node": "^24.10.3",
    "@types/pg": "^8.16.0",
    "@types/react": "^19.2.7",
    "@types/showdown": "^2.0.6",
    "@vitejs/plugin-react": "^5.1.2",
    "@vitest/browser": "^4.0.15",
    "@vitest/browser-playwright": "^4.0.15",
    "@vitest/coverage-v8": "^4.0.15",
